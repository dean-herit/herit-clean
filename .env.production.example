# Production Environment Variables Template
# Copy this to .env.production and fill in actual values
# NEVER commit .env.production to Git!

# Database (Vercel Postgres) - GET FROM VERCEL DASHBOARD
POSTGRES_URL="postgresql://username:password@hostname:port/database"
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NO_SSL="postgresql://username:password@hostname:port/database"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:port/database"
POSTGRES_USER="username"
POSTGRES_HOST="hostname"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# JWT Authentication (CRITICAL: Generate strong secrets)
JWT_SECRET="GENERATE_STRONG_32_CHAR_SECRET_HERE"
REFRESH_SECRET="GENERATE_DIFFERENT_32_CHAR_SECRET"
SESSION_SECRET="SAME_AS_JWT_SECRET"

# Sentry (Error Tracking & Performance)
NEXT_PUBLIC_SENTRY_DSN="https://your-dsn@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="herit-clean"
SENTRY_AUTH_TOKEN="your-auth-token"

# Stripe (Payments)
STRIPE_SECRET_KEY="sk_live_your_live_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_live_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_live_webhook_secret"

# Application
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NODE_ENV="production"
VERCEL_ENV="production"

# SECURITY NOTE: All values above are templates
# Replace with actual production values when deploying